{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@flowpad/core": ["./packages/core/src"],
      "@flowpad/core/*": ["./packages/core/src/*"]
    }
  },
  "include": [
    "packages/*/src/**/*",
    "packages/*/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "packages/*/dist",
    "packages/*/build"
  ]
}